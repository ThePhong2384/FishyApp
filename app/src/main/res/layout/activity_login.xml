<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <!-- Logo -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:src="@drawable/fishy_logo"
            android:contentDescription="Fish Logo"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Ứng dụng trao đổi, mua bán cá cảnh"
            android:textColor="#555555"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

        <!-- Nhập SDT/Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SDT/Email"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập SDT/Email"
            android:background="@drawable/edittext_border"
            android:textColor="#000000"
            android:padding="10dp"/>

        <!-- Nhập mật khẩu -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:background="@drawable/edittext_border"
            android:padding="10dp"/>

        <!-- Quên mật khẩu -->
        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:textColor="#3F6BEF"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_gravity="start"/>

        <!-- Nút đăng nhập -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Đăng nhập"
            android:backgroundTint="#0A2A88"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="20dp"/>

        <!-- Hoặc đăng nhập với -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoặc đăng nhập với"
            android:textSize="14sp"
            android:textColor="#777777"
            android:layout_marginTop="20dp"/>

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="5dp"/>

        <!-- Nút Google & Facebook -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/btnGoogle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/google_logo"
                android:layout_marginEnd="20dp"/>

            <ImageView
                android:id="@+id/btnFacebook"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/facebook_logo"/>
        </LinearLayout>


        <!-- Đăng ký -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa có tài khoản? "
            android:textColor="@android:color/black"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openRegisterActivity"
            android:text="Đăng ký"
            android:textColor="#3F6BEF"
            android:textSize="14sp"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    </LinearLayout>
</ScrollView>
